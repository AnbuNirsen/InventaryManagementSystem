<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="HomeText" parent="TextAppearance.AppCompat.Light.SearchResult.Subtitle">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="PastHistoryTitle" parent="TextAppearance.AppCompat.Light.SearchResult.Subtitle">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="PastHistorySmall" parent="TextAppearance.AppCompat.Small">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>
    <style name="PastHistoryMedium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>


</resources>
